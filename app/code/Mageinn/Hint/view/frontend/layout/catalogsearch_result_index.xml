<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="catalogsearch.leftnav">
            <action method="setTemplate" ifconfig='mageinn_hint_configuration/general/enable'>
                <argument name="template" xsi:type="string">Mageinn_Hint::layer/view.phtml</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="catalogsearch.navigation.renderer">
            <action method="setTemplate" ifconfig='mageinn_hint_configuration/general/enable'>
                <argument name="template" xsi:type="string">Mageinn_Hint::layer/filter.phtml</argument>
            </action>
        </referenceBlock>
    </body>
</page>
